@model ExamProgramme.ViewModels.LessonViewModel.CreateLessonViewModel

<br />
<h2>Register New Lesson</h2>



<form method="post" action="Create" class="mt-5">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Lesson Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="lessonName" asp-for="LessonName" />
			<span class="text-danger" asp-validation-for="LessonName"></span>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Class</label>
		<div class="col-sm-6">
			<input type="number" class="form-control" name="class" asp-for="Class" />
			<span class="text-danger" asp-validation-for="Class"></span>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Teacher's Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="teacherName" asp-for="TeacherName" />
			<span class="text-danger" asp-validation-for="TeacherName"></span>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Teacher's Surname</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="teacherSurname" asp-for="TeacherSurname" />
			<span class="text-danger" asp-validation-for="TeacherSurname"></span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a type="submit" class="btn btn-outline-primary" href="/Lessons/Index" role="button">Cancel</a>
		</div>
	</div>

</form>