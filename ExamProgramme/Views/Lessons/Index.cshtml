@model IEnumerable<ExamProgramme.Models.Lesson>

<br />
<h2 class="mb-4">List of Lessons</h2>
<a class="btn btn-primary btn-sm" href="/Lessons/Create">Register New Lesson</a>
<table class="table mt-2">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Class</th>
			<th>Teacher's Name</th>
			<th>Teacher's Surname</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.LessonName</td>
				<td>@item.Class</td>
				<td>@item.TeacherName</td>
				<td>@item.TeacherSurname</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/Lessons/Update/@item.Id">DETAILS</a>
				</td>
			</tr>
		}
	</tbody>
</table>
