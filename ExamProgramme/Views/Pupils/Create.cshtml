@model ExamProgramme.ViewModels.PupilViewModel.CreatePupilViewModel

<br />
<h2>Register New Pupil</h2>



<form method="post" action="Create" class="mt-5">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" asp-for="Name" />
			<span class="text-danger" asp-validation-for="Name"></span>
		</div>
		
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Surname</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="surname" asp-for="Surname" />
			<span class="text-danger" asp-validation-for="Surname"></span>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Class</label>
		<div class="col-sm-6">
			<input type="number" class="form-control" name="class" asp-for="Class" />
			<span class="text-danger" asp-validation-for="Class"></span>
		</div>
	</div>

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a type="submit" class="btn btn-outline-primary" href="/Pupils/Index" role="button">Cancel</a>
		</div>
	</div>
	
</form>