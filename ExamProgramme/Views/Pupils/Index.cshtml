@model IEnumerable<ExamProgramme.Models.Pupil>

<br />
<h2 class="mb-4">List of Pupils</h2>
<a class="btn btn-primary btn-sm" href="/Pupils/Create">Register New Pupil</a>
<table class="table mt-2">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Surname</th>
			<th>Class</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.Surname</td>
				<td>@item.Class</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/Pupils/Update/@item.Id">DETAILS</a>
				</td>
			</tr>
		}
	</tbody>
</table>